#include <stdio.h>
int main()
{
    int n,num,i=0,sum=0;
    float avg;
    printf ("Enter limit of numbers: ");
    scanf ("%d",&n);
    printf ("Enter %d numbers: ",n);
    do
    {
        scanf ("%d",&num);
        sum+=num;
        i++;
    }
    while (i<n);
    printf ("Sum of given %d numbers: %d\n",n,sum);
    avg=(float)sum/n;
    printf ("Average of given numbers: %.2f\n",avg);
    return 0;
}
