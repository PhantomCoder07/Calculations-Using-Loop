#include <stdio.h>
int main()
{
    int i,a=2,num,sum=0;
    printf ("Enter n term: ");
    scanf ("%d",&num);
    printf ("First %d even number: ",num);
    for (i=1; i<=num; i++)
    {
        printf ("%d ",a);
        sum+=a;
        a+=2;
    }
    printf ("\nSum of first %d even numbers: %d\n",num,sum);
    return 0;
}
